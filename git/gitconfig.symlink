[user]
  name = Ben Scott
  email = ben@reload.me.uk
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[help]
  autocorrect = 1
[fetch]
  prune = true
[push]
  default = upstream
  autoSetupRemote = true
[merge]
  defaultToUpstream = true
[diff]
  algorithm = histogram
[pull]
  ff = only
[init]
  defaultBranch = main
